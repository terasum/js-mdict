{
  "name": "js-mdict",
  "version": "6.0.0-alpha-1",
  "description": "mdict (*.mdx, *.mdd) file reader",
  "author": "terasum <terasum@163.com>",
  "repository": "git+https://github.com/terasum/js-mdict.git",
  "keywords": [
    "mdict",
    "dictionary",
    "mdx",
    "mdd",
    "vocabulary",
    "borwser"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terasum/js-mdict/issues"
  },
  "homepage": "https://github.com/terasum/js-mdict#readme",
  "type": "module",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import":  "./dist/esm/index.js"
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "engines": {
    "node": ">=10.20.0"
  },
  "scripts": {
    "prepareBuild": "shx mkdir -p dist/{cjs,esm}",
    "prepublishOnly": "npm run prepareBuild && npm run build",
    "clean": "shx rm -rf dist/*",
    "test": "jest",
    "build-cjs": "tsc --module commonjs --outDir dist/cjs/ && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build-esm": "tsc  --module nodenext --moduleResolution nodenext --outDir dist/esm/ && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build": "npm run build-cjs && npm run build-esm",
    "watch": "tsc --watch",
    "testall": "mocha --ui qunit dist/test",
    "lint": "eslint --quiet 'src/**/*.ts' 'test/**/*.ts'",
    "lint-fix": "eslint --quiet 'src/**/*.ts' 'test/**/*.ts' --fix",
    "prepack": "npm run clean && npm run build",
    "bench": "npm run build && mocha --require @babel/register test/decode_key_block.bench.js"
  },
  "dependencies": {
    "@types/pako": "^2.0.3",
    "@xmldom/xmldom": "^0.8.6",
    "levenshtein-edit-distance": "^3.0.1",
    "lodash": "^4.17.21",
    "lzox1-rs": "link:src/lzox1-rs/pkg",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@jest/globals": "^29.7.0",
    "@types/chai": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.3",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "benchmark": "^2.1.4",
    "chai": "^5.1.1",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "jest": "^29.7.0",
    "nyc": "^17.1.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "files": [
    "package.json",
    "README.md",
    "dist",
    "LICENSE",
    "src"
  ],
  "mocha": {
    "loader": [
      "ts-node/esm"
    ],
    "recursive": true,
    "extension": [
      "ts",
      "js",
      "tsx"
    ],
    "exit": true
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
